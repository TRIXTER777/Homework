<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Label" BasedOn="{StaticResource BaseSizes}">
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
    </Style>


    <Style
         
        TargetType="TextBox" BasedOn="{StaticResource BaseSizes}">
        <Style.Setters>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style.Setters>
    </Style>

    <Style
            x:Key="2"
        TargetType="PasswordBox" BasedOn="{StaticResource BaseSizes}">
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style  TargetType="TextBlock" x:Key="TextBlockToLine">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Height" Value="1"/>
    </Style>

</ResourceDictionary>