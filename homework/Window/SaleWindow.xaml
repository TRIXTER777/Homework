<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:homework"
        xmlns:Entity="clr-namespace:homework.Entity" x:Class="homework.SaleWindow"
        mc:Ignorable="d"
        Title="SaleWindow"  WindowStartupLocation="CenterScreen" MinHeight="430" MinWidth="380" Height="450" Width="400"  >
    <Grid>

        <DataGrid  x:Name="TableGrid"   Height="350" VerticalAlignment="Top"  IsReadOnly="True"  AutoGenerateColumns="False"  >
            <DataGrid.Columns >
                
                <DataGridTextColumn Header="FirstName" Binding="{Binding FirstNAme}"/>
                <DataGridTextColumn Header="SurName" Binding="{Binding SurNAme}" />
                <DataGridTextColumn Header="LastName" Binding="{Binding LastNAme}"/>
                <!--<DataGridTextColumn Header="OrderId" Binding="{Binding Oder_Id}"/>-->
                <DataGridTextColumn Header="Products" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                
            </DataGrid.Columns>


        </DataGrid>
        <Button x:Name="Back" Content="Назад" Style="{StaticResource MainSyleButton}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Back_Click"/>
    </Grid>
</Window>
