<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style 
        TargetType="Button"
        x:Key="MainStyleWarningButton"
        BasedOn="{StaticResource BaseSizes}">
        <Style.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="20"/>
            </Style>
        </Style.Resources>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="#00985F"/>
    </Style>
    <Style
            x:Key="MainSyleButton"
            BasedOn="{StaticResource BaseSizes}"
            TargetType="Button">
         <Style.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="20"/>
            </Style>
        </Style.Resources>
        <Setter Property="Background" Value="#e0001a"/>
    </Style>
</ResourceDictionary>